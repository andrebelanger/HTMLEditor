<Window x:Class="HtmlEditor.InsertTableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Insert Table" Height="300" Width="300">

    <StackPanel>
        <StackPanel Margin="10,40,0,0" Orientation="Horizontal" Height="26" HorizontalAlignment="Left" Width="206">
            <Label Content="Columns:"/>
            <TextBox x:Name="ColumnsBox" MinWidth="50" HorizontalAlignment="Right"/>
        </StackPanel>
        <StackPanel Margin="0,20,0,0" Orientation="Horizontal" Width="236">
            <Label Content="Rows:"/>
            <TextBox x:Name="RowsBox" MinWidth="50" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Margin="20" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin="10" x:Name="insertBtn" Width="80" Height="30" Content="Insert Table" Click="InsertPressed"/>
            <Button Margin="10" x:Name="cancelBtn" IsCancel="True" Height="30" Width="80" Content="Cancel" />
        </StackPanel>
    </StackPanel>
</Window>
