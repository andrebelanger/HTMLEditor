<Window x:Class="HtmlEditor.HtmlEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HtmlEditorWindow" Height="350" Width="525">
    <DockPanel>
		<Menu Width="Auto" Height="20" DockPanel.Dock="Top">
			<MenuItem Header="_File" Click="OpenExample">
				<MenuItem Header="_Open"  />
				<MenuItem Header="_Save" />
				<MenuItem Header="Save _As" />
			</MenuItem>
            <MenuItem Header="_Edit" Click="OpenExample">
                <MenuItem Header="_Add..." >
                    <MenuItem Header="_Table" />
                </MenuItem>
                <MenuItem Header="_Bold" />
                <MenuItem Header="_Italic" />
            </MenuItem>
        </Menu>
		<TabControl x:Name="CodeEditors">
		</TabControl>
	</DockPanel>
</Window>
