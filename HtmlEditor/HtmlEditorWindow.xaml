<Window x:Class="HtmlEditor.HtmlEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HtmlEditorWindow" Height="350" Width="525">
    <DockPanel>
        <Menu Width="Auto" Height="20" DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open"  Click="Open" />
                <Separator />
                <MenuItem Header="_Validate" Click="Validate" />
                <Separator />
                <MenuItem Header="_Save"  Click="Save" />
                <MenuItem Header="Save _As"  Click="SaveAs" />
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Bold" />
                <MenuItem Header="_Italic" />
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_PlainText"/>
                <MenuItem Header="_AvalonEdit"/>
            </MenuItem>
            <MenuItem Header="_Insert">
                <MenuItem Header="_Table" Click="OpenTableWindow"/>
                <MenuItem Header="_List" Click="OpenListWindow"/>
            </MenuItem>
            <MenuItem Header="X" HorizontalAlignment="Right"/>
        </Menu>
        <TabControl x:Name="CodeEditors">
        </TabControl>
	</DockPanel>
</Window>
