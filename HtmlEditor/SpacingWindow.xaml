<Window x:Class="HtmlEditor.SpacingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tab Spacing" Height="300" Width="300">
    <StackPanel>
        <StackPanel Margin="20,40,0,0" Orientation="Horizontal" Height="26" HorizontalAlignment="Left" Width="206">
            <Label Content="# of Indents:"/>
            <TextBox x:Name="SpacesBox" MinWidth="50" HorizontalAlignment="Right"/>
        </StackPanel>
        <StackPanel Margin="20" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin="10" x:Name="applyBtn" Width="80" Height="30" Content="Apply" Click="ApplyPressed"/>
        </StackPanel>
    </StackPanel>
</Window>
