<Window x:Class="HtmlEditor.InsertATagWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Insert A Tag" Height="300" Width="300">
    <StackPanel>
        <StackPanel Margin="20,40,0,0" Orientation="Horizontal" Height="26" HorizontalAlignment="Left" Width="206">
            <Label Content="href: "/>
            <TextBox x:Name="hrefBox" MinWidth="150" HorizontalAlignment="Right"/>
        </StackPanel>
        <StackPanel Margin="50" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin="10" x:Name="insertBtn" Width="80" Height="30" Content="Insert" Click="InsertPressed"/>
            <Button Margin="10" x:Name="cancelBtn" IsCancel="True" Height="30" Width="80" Content="Cancel" Click="CancelPressed" />
        </StackPanel>
    </StackPanel>
</Window>

